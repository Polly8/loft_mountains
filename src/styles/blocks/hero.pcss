
/*hero*/

.first-section{
    background: url(../images/content/hero-bg-full.png) no-repeat;
    background-size: cover;
    padding-bottom: 260px;
}

.hero{
    height: 100vh;
    min-height: 650px;
    overflow: hidden;
    position: relative;

    &__main{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    &__scroll{
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);

        &:hover{
            text-decoration: underline;
        }

        &-title{
            color: #464d62;
            font-size: 18px;
            display: flex;
            flex-direction: row;
            align-items: center;
            position: relative;
            font-weight: 600;
            padding: 2px 0;
        }        
    }
}

.header{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 60px 0;
    position: relative;

    .logo{
        width: 48px;
        height: 44px;
        display: block;
        font-size: 36px;
        font-weight: 800;
    }

    &__nav{
        margin: 0 60px;
    }
}

.menu{
    &__list{
        display: flex;
        flex-direction: row;
        color: #464d62;
    }

    &__link{
        padding: 36px 30px;
        
    }

    &__link:hover{
        color: #5500f2;
        border-bottom: 2px solid #5500f2;
    }

}

.socials__list{
    display: flex;
    flex-direction: row;

    .socials__item{
        margin-right: 35px;

        &:last-child{
            margin-right: 0;
        }

        .socials__link{
            width: 31px;
            height: 28px;
            display: block;

            .socials__icon{
                fill: currentColor;
                width: 100%;
                height: 100%;

            }
        }       
    }
}

.header__socials .socials__link:hover .socials__icon{
    fill: #5500f2;
}

.author__info{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    text-align: center;
    width: 400px;

    &-title{
        color: #a0a6b8;
        font-size: 18px;
        margin-bottom: 30px;
    }

    &-name{
        color: #464d62;
        font-size: 72px;
        font-weight: 800;
        line-height: 3.7rem;
    }
}

.scroll__icon{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: -36px;
    width: 27px;
    height: 27px;
    fill: currentColor;
}