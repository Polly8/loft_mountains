/*about form*/

.form{
    background: #fff;
    padding: 30px 20px;
    margin: 30px 0;
    box-shadow: 0 0 10px #0000001f;
}

.about-form{
    width: calc(50% - 30px);
}

.form__header{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 10px 14px 10px;
}

.form__content{
    min-height: 240px;
}

.form__header{
    border-bottom: 1px solid #dedee0;
}

.form__title{
    width: 55%;
    border: none;
    border-bottom: 1px solid #000;
    padding-bottom: 16px;
    color: #414c63;
    font-size: 18px;
    font-weight: 600;

    &::placeholder{
        color: #b8bcc5;
    }
}

.form__btns-tick{
    background: url(../images/content/tick-admin.png) no-repeat;
    border: none;
    width: 16px;
    height: 16px;
    margin-right: 20px;
}

.form__btns-cross{
    background: url(../images/content/cross-admin.png) no-repeat;
    border: none;
    width: 16px;
    height: 16px;
}

.form__bottom{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.form__bottom-text{
    border: none;
    border-bottom: 1px solid #000;
    padding: 0 18px 14px 18px;
    width: 45%;
    color: #414c63;
    font-size: 16px;
    margin-right: 10px;

    &::placeholder{
        color: #b8bcc5;
    }
}

.form__bottom-percent{
    border: none;
    border-bottom: 1px solid #000;
    padding: 0 18px 14px 18px;
    color: #414c63;
    font-size: 16px;
    margin-right: 30px;
    position: relative;
}

.form__bottom-percent-wrapper{
    position: relative;
}

.form__bottom-percent-wrapper:after{
    content: "%";
    display: block;
    position: absolute;
    bottom: 14px;
    right: 38px;
    color: #b8bcc5;
    font-size: 16px;
}

.form__bottom-add{
    border: none;
    background: linear-gradient(to right, #1756e1, #3f35cb);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    position: relative;
    margin-right: 10px;

    &:after{
        content: "+";
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 30px;
        color: #fff;
        font-weight: 600;
    }
}

