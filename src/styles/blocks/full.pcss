/*******admin*********/


.entrance{
    height: 100vh;
    background: url(../images/content/hero-bg-full.png) no-repeat;
    background-size: cover;
    width: 100%;
}

.entrance-wrapper{
    width: 100%;
    height: 100%;
    background: #39495ee6;
    display: flex;
    justify-content: center;
    align-items: center;
}

.entrance__content{
    background: #fff;
    padding: 60px 70px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
    width: 30%;
}

.entrance__title{
    font-size: 36px;
    font-weight: 600;
    color: #414c63;
    margin-bottom: 30px;
}

.entrance__close{
    position: absolute;
    top: 25px;
    right: 25px;
    width: 20px;
    height: 20px;
    border: none;
    background: url(../images/content/cancel.png) no-repeat;
}

.entrance__form{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.entrance__form-block{
    width: 100%;
    color: #c6c9d0;
    border-bottom: 1px solid #c6c9d0;
    margin-bottom: 30px;
    padding-left: 40px;
    position: relative;

    &:last-child{
        margin-bottom: 0;
    }
    
    &:hover{
        border-bottom-color: #414c63;
        cursor: pointer;
    }

}

.entrance__form-title{
    margin-bottom: 20px;
}

.entrance__input{
    width: 100%;
    border: none;
    outline: none;
    font-size: 18px;
    font-weight: 700;
    color: #414c63;
    padding-bottom: 16px;

}

.entrance__form-block--login{
    &:before{
        content: "";
        display: inline-block;
        position: absolute;
        bottom: 16px;
        left: 0;
        width: 30px;
        height: 33px;
        background: url(../images/content/input-name.png) no-repeat;
    }
}

.entrance__form-block--password{
    &:before{
        content: "";
        display: inline-block;
        position: absolute;
        bottom: 16px;
        left: 0;
        width: 30px;
        height: 33px;
        background: url(../images/content/key.png) no-repeat;
    }
}

.entrance__form-submit{
    padding: 30px 120px;
    font-size: 18px;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    border-radius: 40px 5px;
    background: linear-gradient(to right, #9000ef, #5500f2);

    &:hover{
        background: linear-gradient(to right, #9c00ff, #5900ff);
    }
}


